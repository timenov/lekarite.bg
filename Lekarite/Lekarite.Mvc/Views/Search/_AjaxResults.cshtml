@model IEnumerable<Lekarite.Mvc.Models.Search.DoctorSearchViewModel>

@if (Model.Count() == 0)
{
    <span class="list-group-item">Няма намерени резултати</span>
}
else
{
    <div class="list-group">
        @foreach (var doctor in Model)
        {
            @Html.ActionLink(doctor.FullName, "Get", "Doctors", new { id = doctor.Id }, new { @class = "list-group-item" })
        }
    </div>
}

@model IEnumerable<Lekarite.Mvc.Models.Doctors.CommentViewModel>

<div class="container container-striped">
    @foreach (var comment in Model)
    {
        <div class="row">
            <h5>
                от: <strong>@(comment.User != null ? comment.User.UserName : "anonymous")</strong>
                <small class="pull-right text-right">(@comment.CreatedOn)</small>
            </h5>
            <p>@comment.Content</p>
        </div>
    }
</div>
